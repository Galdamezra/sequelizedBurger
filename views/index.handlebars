<div class="jumbotron">
  <div class="container">
      <div class="col-lg-4 col-lg-offset-3">
        <img src="https://assets3.thrillist.com/v1/image/1422496/size/tmg-article_default_mobile;jpeg_quality=20.jpg" alt="../public/assets/img/burger.jpg">
      </div>
      <div class="col-lg-8 col-lg-offset-2">
        <h1><span class="glyphicon glyphicon-piggy-bank"></span> Burgers are so Good!</h1>
        <h4>Order 'em, Eat 'em!</h4>
        <br>
      </div>
  </div>
</div>

<div class="container">

    <div class="container">

      <h2>Order Here</h2><hr>

      <form class="create-update-form" action="/" method="POST">

        <div class="form-group">
          <label for="bu"><h4>Burger Name: </h4></label>
          <input type="text" id="bu" name="burger_name">
        </div>
        <!-- <div class="form-group">
          <label for="dev">Devour?</label><br>
          <input type="radio" name="devour" value="1" checked>Devour! <br>
          <input type="radio" name="devour" value="0"> Uneat
        </div> -->
        <button type="submit" class="btn btn-success">Start Cooking!</button>
        <hr>
      </form>
    </div>

    <div class="container">
      <h2>Your Burgers are ready!</h2><hr>

        <ul class="list-group">

          {{#each burgers}}
            {{#unless this.devoured}}
              <!-- <ul class="list-group"> -->
                <br>
                <li class="list-group-item">
                  <h4>

                    {{this.burger_name}}

                  </h4>
                <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" name="devoured" value="true"><br>
                    <!-- <button type=" submit">EAT IT!</button> -->
                    <button type="submit" class="btn btn-danger">Eat it!</button>
                </form>
              </li>

            </ul>

            {{/unless}}
          {{/each}}

        </ul>

        <div class="container">
          <h2>Eaten Burgers!</h2><hr>

            <ul class="list-group">

              {{#each burgers}}
                {{#if this.devoured}}

                  <!-- <ul class="list-group"> -->
                    <br>
                    <li class="list-group-item">
                      <h4>

                        {{this.id}}.{{this.burger_name}}

                      </h4>
                  </li>

                </ul>

                {{/if}}
              {{/each}}

            </ul>
        <!-- <h2>Burgers you ate!</h2> -->
      </div>


</div>
